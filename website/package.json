{
  "type": "module",
  "private": true,
  "scripts": {
    "build": "astro build",
    "dev": "astro dev",
    "fmt": "prettier --write . src/**/*.astro",
    "fmt:check": "prettier --check . src/**/*.astro",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^6.6.0",
    "@astrojs/tailwind": "^4.0.0",
    "astro": "^2.8.0",
    "date-fns": "^2.30.0",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "@radix-ui/colors": "^1.0.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "2.8.8",
    "prettier-plugin-astro": "^0.10.0",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-pkg": "^0.17.0",
    "typescript": "^5.1.6"
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-pkg",
      "prettier-plugin-organize-imports"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}
